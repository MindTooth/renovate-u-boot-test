{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    ":timezone(Europe/Berlin)",
    ":disableRateLimiting",
    ":rebaseStalePrs"
  ],

  "enabledManagers": ["custom.regex"],

  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/README/"],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>.*?)(?:\\s+extractVersion=(?<extractVersion>.+?))?(?:\\s+versioning=(?<versioning>.+?))?\\s+depName=(?<depName>.+?)?\\s(?:.*_(?:version|VERSION):\\s+(?<currentValue>.*))?(?:(\\s)?.*_(?:ref|REF):\\s+(?<currentDigest>.*))?"
      ]
    }
  ],

  "packageRules": [
    {
      "versioning": "loose",
      "matchPackageNames": ["u-boot/u-boot"]
    },
    {
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)((?<prerelease>-)rc(?<build>\\d+))?$",
      "matchPackageNames": ["MindTooth/u-boot"],
      "branchPrefix": "fork"
    }
  ]
}
